.c-note
	margin 2rem auto
	background var(--color-background-light)
	padding 1em 2em 1em 2em
	border-left 4px solid transparent
	position relative

	@media $mq-tablet
		margin 2rem -2rem
		padding-top 2em
		margin-top 2.5rem
		border-left 0
		border-top 4px solid transparent

.c-note::before
	content ""
	position absolute
	left -2px
	transform translateX(-50%)
	size rem(28px)
	text-align center
	border-radius 50%

	@media $mq-tablet
		left 50%
		top 0
		transform translate(-50%, -50%)

