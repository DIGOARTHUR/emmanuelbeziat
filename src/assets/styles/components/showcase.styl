.showcase__list
	display grid
	grid-template-columns repeat(auto-fit, minmax(240px, 1fr))
	gap 4px

.showcase__item
	opacity 0
	position relative
	color var(--color-text)
	background var(--color-background-dark)

.showcase__layer
	background var(--color-separator)
	position relative
	height rem(240px)
	display flex
	justify-content center
	align-items center
	z-index 10
	transform-origin 50% 20px
	transition .2s ease-in-out
	backface-visibility hidden

	& :deep(svg)
		size rem(128px)
		fill var(--color-text)
		backface-visibility hidden
		transition .2s ease-in-out .1s

.showcase__caption
	z-index 5
	position absolute
	top auto
	right 0
	bottom 0
	left 0
	padding 1rem
	// background var(--color-background-dark)
	display flex
	flex-direction column
	justify-content flex-end
	overflow hidden
	text-align center
	opacity 0
	visibility hidden
	transform translateY(10px)
	transition .25s ease-in-out 0s

.showcase__title
	margin 0 0 .35em
	line-height 1
	font-size rem(28px)
	font-weight 400

.showcase__item:hover
	.showcase__layer
		transform scale(.4) translateZ(0)
		border-radius 50%
		size rem(240px)
		margin auto

		&.blue
			background var(--color-blue)

		&.red
			background var(--color-red)

		&.violet
			background var(--color-violet)

		&.yellow
			background var(--color-yellow)

		&.green
			background var(--color-green)

		&.black
			background darken($color-grey, 50%)

	.showcase__image
		transform scale(1.2)
		// transform translate(0, -60px) scale(.6)

	.showcase__caption
		opacity 1
		visibility visible
		transform translateY(0)
		transition .25s ease-in-out .1s

.showcase-tags
	display flex
	align-items center
	justify-content center

	i
		margin-right rem(10px)

.showcase-tags__list
	text-align left
	line-height 1.15

.showcase-tags__item
	font-size rem(14px)
	color var(--color-text)

	&:not(:last-child)::after
		content ", "
