// Pages transitions
.fade-transition
	transition transform .2s ease-in-out, opacity .2s ease-in-out

.fade-enter
.fade-leave
	transform translateX(-15%)
	opacity 0

.fade-enter
	transform translateX(15%)

// Animation icons
.animate-spin
	animation spin 2s infinite linear
	display inline-block

@keyframes spin
	from
		transform rotate(0deg)

	to
		transform rotate(359deg)

// Loader
@keyframes pulsate
	0%
		// transform scale(.1)
		opacity 0

	25%
	75%
		opacity 1

	100%
		// transform scale(1.2)
		opacity 0
