html
	height 100%
	box-sizing border-box

*
*::before
*::after
	box-sizing inherit

body
	margin 0
	font 400 $font-size-base/1.5em $font-stack-common
	background $color-background
	color $color-text
	height 100%

h1
	font-family $font-stack-heading
	font-weight 200

.site
	min-height 100%
	display flex
	flex-direction row
	align-items stretch
	overflow-x hidden

.site-content
	width 60rem
	margin 0 auto
