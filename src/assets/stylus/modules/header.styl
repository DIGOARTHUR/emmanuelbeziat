.site-header
	padding 2rem
	background darken($color-background, 10%)
	width 20rem
	position relative
	z-index 10
	text-align center

.site-header__title
	margin-top 0
	font-size 2.25rem
	line-height 1

.site-header__bio
	margin 2em 0

.social__link
	display inline-block
	width 2rem
	height 2rem
	padding .25em
	background rgba(0, 0, 0, .7)
	border-radius 2px

.social__icon
	display block
	fill $color-text
	width 100%
	height 100%


