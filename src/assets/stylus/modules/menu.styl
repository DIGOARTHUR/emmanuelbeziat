.site-menu
	display flex
	justify-content flex-end

	@media (max-width $breakpoint-mobile)
		justify-content center

.site-menu__link
	font 400 $font-size-menu/1 $font-stack-heading
	text-decoration none
	color $color-text
	position relative

	@media (max-width $breakpoint-mobile)
		font-size $font-size-heading-3

	&::before
	&::after
		display inline-block
		opacity 0
		transition .3s ease-in-out
		color $color-text

	&::before
		content "<"
		transform translateX(20px)
		padding-right .125em
	&::after
		content "/>"
		transform translateX(-20px)
		padding-left .1875em

	&:nth-child(1)
		&:hover
		&:focus
			color $color-green

	&:nth-child(2)
		&:hover
		&:focus
			color $color-blue

	&:nth-child(3)
		&:hover
		&:focus
			color $color-red

.site-menu__link--active
	&:nth-child(1)
		color $color-green
		&:hover
			&::before
			&::after
				color $color-green

	&:nth-child(2)
		color $color-blue
		&:hover
			&::before
			&::after
				color $color-blue

	&:nth-child(3)
		color $color-red
		&:hover
			&::before
			&::after
				color $color-red

.site-menu__link--active
.site-menu__link:hover
.site-menu__link:focus
	&::before
	&::after
		opacity 1
		transform translateX(0)
