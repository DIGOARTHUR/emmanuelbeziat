.social-share__link
	display inline-block
	width 2.25rem
	height 2.25rem
	padding .5em
	background darken($color-background, 25%)
	border-radius 2px
	transition .5s ease-out
	overflow hidden

	&:hover
	&:focus
		transition .2s ease-out

brand-icon(social-share__link--twitter, $color-brand-twitter)
brand-icon(social-share__link--facebook, $color-brand-facebook)
brand-icon(social-share__link--google-plus, $color-brand-google-plus)
brand-icon(social-share__link--linkedin, $color-brand-linkedin)
