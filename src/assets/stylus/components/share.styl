.c-social
[class^="c-social"]
	display inline-block
	width 2.25rem
	height 2.25rem
	padding .5em
	background darken($color-background, 25%)
	border-radius 2px
	transition .5s ease-out
	overflow hidden
	border 0
	cursor pointer
	outline 0

	&:hover
	&:focus
		transition .2s ease-out

brand-icon(c-social--twitter, $color-brand-twitter)
brand-icon(c-social--facebook, $color-brand-facebook)
brand-icon(c-social--google-plus, $color-brand-google-plus)
brand-icon(c-social--linkedin, $color-brand-linkedin)
