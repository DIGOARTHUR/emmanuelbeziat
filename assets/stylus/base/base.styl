::selection
	background $color-blue
	color $color-text
	text-shadow 0 1px solid darken($color-blue, 50%)

body
	margin 0
	font 400 $font-size-base/1.5em $font-stack-common
	background $color-background
	color $color-text

h1
h2
h3
	font-family $font-stack-heading
	font-weight 200
	margin 2em 0 .75em
	line-height 1

h2
	font-size $font-size-heading-2
	color $color-green

h3
	font 700 $font-size-heading-3/1.5 $font-stack-common

// Links
a
	background-color transparent
	-webkit-text-decoration-skip objects
	transition .2s ease-in-out
	color $color-green
	text-decoration none

	&:hover
	&:focus
		color $color-yellow

img
	max-width 100%
	border-style none

// Quotes
blockquote
	position relative
	margin 2rem 0
	padding-left 4rem
	font 400 italic $font-size-quotes/1.5em $font-stack-common

blockquote::before
	content "“"
	position absolute
	left 0
	top 2rem
	font-size 6em
	color lighten($color-background, 25%)

q
	font-style italic
	color $color-yellow
	quotes "« " " »"

kbd
pre
code
	font-family $font-stack-code
